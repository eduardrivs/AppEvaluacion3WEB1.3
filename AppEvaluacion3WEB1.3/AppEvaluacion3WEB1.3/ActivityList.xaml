<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEvaluacion3WEB1._3.ActivityList">

    <StackLayout BackgroundColor="Black">
        <Frame HorizontalOptions="Center" HeightRequest="29" BackgroundColor="Transparent">
            <StackLayout Orientation="Horizontal">
                <Image Source="https://raw.githubusercontent.com/eduardrivs/Resources/main/Modam/LogoWhite.png"/>
                <Label Text="ARTIST.IO" TextColor="White" FontSize="27" Margin="20,0"/>
            </StackLayout>
        </Frame>
        <CollectionView ItemsSource="{Binding Artistas}"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="Auto,*"
                          ColumnDefinitions="Auto,*">
                        <Image Source="{Binding ImagenURL}"
                               Grid.RowSpan="6"
                               Grid.ColumnSpan="2"
                               Aspect="AspectFit"/>
                        <Label Text="{Binding Nombre}"
                               TextColor="White"
                               Grid.Row="3"
                               Grid.Column="0"
                               Margin="30,0,0,0"
                               FontSize="35"
                               HeightRequest="40"/>
                        <BoxView VerticalOptions="Center"
                                 Grid.Row="4"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 HeightRequest="2"
                                 Color="White"
                                 Margin="30,0,250,0"/>
                        <Label Text="{Binding Edad, StringFormat='{0:N0} años'}"
                               TextColor="White"
                               Grid.Row="5"
                               Grid.Column="0"
                               VerticalOptions="Start"
                               Margin="30,-20"/>
                        <Label Text="{Binding Generos}"
                               TextColor="White"
                               Grid.Row="5"
                               Grid.Column="0"
                               VerticalOptions="Start"
                               MaxLines="1"
                               Margin="30,0"
                               WidthRequest="250"/>
                        <Image Source="https://cdn0.iconfinder.com/data/icons/google-material-design-3-0/48/ic_play_circle_filled_white_48px-512.png"
                               Grid.Column="1"
                               Grid.Row="4"
                               Grid.RowSpan="2"
                               HeightRequest="50"
                               HorizontalOptions="End"
                               VerticalOptions="End"
                               Margin="0,0,40,30"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="Black" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
</ContentPage>